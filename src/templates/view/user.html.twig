{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>view stuff</h1>
        {% for skill in skills %}
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">{{ skill.name }}</h5>
                </div>
                {% if skill.hasChildren %}
                <div class="card-body">
                        <ul class="list-group-flush">
                            {% for child in skill.children %}
                                <li class="list-group-item">
                                    {{ child.name }}
                                </li>
                            {% endfor%}
                        </ul>
                </div>
                {% endif %}
            </div>
        {% endfor %}
    </div>
{% endblock %}

