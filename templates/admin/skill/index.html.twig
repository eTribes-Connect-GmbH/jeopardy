{% extends 'base.html.twig' %}

{% block title %}Skill index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Skill index</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for skill in skills %}
                <tr>
                    <td>{{ skill.id }}</td>
                    <td>{{ skill.name }}</td>
                    <td>{{ skill.description }}</td>
                    <td>
                        <a href="{{ path('skill_edit', {'id': skill.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('skill_new') }}">Create new</a>
    </div>
{% endblock %}
